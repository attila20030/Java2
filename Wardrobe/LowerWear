package Wardrobe;

public class LowerWear extends Cloth {

    public LowerWear(String color, int condition) {
        super(color, "alsóruházat", condition = 100);
    }

    @Override
    public boolean needsToBeWashed() {
        return daysWorn >= 1;
    }

    @Override
    public boolean needsToBeRepaired() {
        return false; 
    }
    
}
